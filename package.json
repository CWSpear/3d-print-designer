    "chalk": "<5.0.0",
    "chokidar": "^3.5.3",
    "express": "^4.17.3",
    "fs-extra": "^10.0.1",
    "lodash": "^4.17.21",
    "node-notifier": "^10.0.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.6.1",
    "shelljs": "^0.8.5",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "three": "^0.139.0",
    "three-orbit-controls": "^82.1.0"

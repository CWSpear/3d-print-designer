    "pretty-quick": "^3.1.3",
    "sass": "^1.49.9",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:quick"
    }
  },
  "browserslist": [
    "last 2 Chrome versions"
